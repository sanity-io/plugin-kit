{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",

    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    // Don't emit by default, pkg-utils will ignore this when generating .d.ts files
    "noEmit": true
  }
}
